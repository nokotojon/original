<div class="topic-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">動画投稿</h1>
        <%= form_for @song do |f| %>
          <div class="form-group">
            <%= f.label :video,"動画ファイルを選択" %>
            <%= f.file_field :video%>
          </div>

          <div class="form-group">
            <%= f.label :title,"曲名" %>
            <%= f.text_field :title, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :lyrics,"リリック" %>
            <%= f.text_area :lyrics, class: 'form-control' %>
          </div>

          <%= f.submit '投稿', class: 'button  btn-block add-video-button' %>

        <% end %>
      </div>
    </div>
  </div>
</div>