<div class="topic-index-wrapper">
  <div class="container">
    <% @songs.each do |song| %>

      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <div class="topic-user-image">
                  <% if song.user.image? %>
                  <%= image_tag song.user.image.url %>
                 <% end %>
                 </div>
            <h2 class="topic-text song-user-name">
              <%= song.user.name %>
            </h2>
              <p class="topic-text move-left">
              <%= "#{song.title}のリリック、概要を見る" %>
              </p>
            <p class="topic-text move-left">
              <%= song.lyrics %>
            </p>
            <p class="topic-text move-left">
              <%= "#{song.user.name}のプロフィールを見る" %>
            </p>
            <p class="topic-text move-left">
              <%= song.user.profile %>
            </p>
            <h3 class="topic-text">
              <%= song.title %>
            </h3>
            <%= video_tag song.video_url.to_s,loop: true, controls: true, width: 550, id: "mv" %>
            <div>
              <% if !song.favorite_users.include?(current_user) %>
                <%= link_to favorites_path(song_id: song.id),method: :post do %>
                  <%= image_tag "icons/black-hert.jpg", class: 'topic-index-icon' %>
                  <%= song.favorite_users.count %>
                <% end %>
                <% else %>
                  <%= link_to favorites_path(song_id: song.id),method: :delete do %>
                  <%= image_tag "icons/red-hert.jpeg", class: 'topic-index-icon' %>
                  <%= song.favorite_users.count %>
                <% end %>
              <% end %> 
              <p>コメント欄</p>
              <% song.comments.each do |comment| %>
                 <p class="topic-text">
                   <%= comment.user.name %>
                   <%= comment.comment %>
                 </p>
              <% end %>
              <%= link_to comments_path(song_id: song.id) do %>
                <%= image_tag "icons/comment.jpeg", class: 'topic-index-icon' %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
  
    <% end %>
  </div>
</div>