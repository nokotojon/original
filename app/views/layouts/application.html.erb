<!DOCTYPE html>
<html>
  <head>
  <title>Original</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
  </head>

  <body class='<%= controller.controller_name %>'>
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>" role="alert"><%= value %></div>
  <% end %>
  
   <nav class="navbar navbar-default navbar-fixed-top navbar-transparent">
      <div class="container">
        <%= link_to root_path do %>
          <span><%= image_tag "icons/MIC.jpeg", class: "navbar-brand" %></span>
        <% end %>
        <ul class="nav navbar-nav navbar-right">
          <% if logged_in? %>
            <li class="icon-hover">
              <%= link_to songs_path do %>
                <%= image_tag "icons/newsong.jpeg" %>
                <p class="explanation">新着動画</p>
              <% end %>
            </li>
             <li class="icon-hover">
              <%= link_to songs_sort_path do %>
                <%= image_tag "icons/video.jpeg" %>
                <p class="explanation">日付検索</p>
              <% end %>
            </li>

             <li class="icon-hover">
              <%= link_to new_song_path do %>
                <%= image_tag "icons/submit.jpeg" %>
                <p class="explanation">動画を投稿</p>
              <% end %>
            </li>
            <li class="icon-hover">
              <%= link_to users_path do %>
                <%= image_tag "icons/members.jpeg" %>
                <p class="explanation">ユーザー一覧</p>
              <% end %>
            </li>
            <li class="icon-hover">
              <%= link_to favorites_index_path do %>
                <%= image_tag "icons/hert.jpeg" %>
                <p class="explanation">いいねした動画</p>
              <% end %>
            </li>

            <li class="icon-hover">
              <%= link_to rappers_index_path do %>
                <%= image_tag "icons/rappers.jpeg" %>
                <p class="explanation">ラッパー一覧</p>
              <% end %>
            </li>            
            
            
            <% if current_user.admin? %>
            <li class="icon-hover">
              <%= link_to rappers_new_path do %>
                <%= image_tag "icons/rapper.jpeg" %>
                <p class="explanation">ラッパーの追加</p>
              <% end %>
            </li>
            <% end %>
            
            <li class="icon-hover">
              <%= link_to logout_path, method: :delete do %>
                <%= image_tag "icons/logout.jpeg" %>
                <p class="explanation">ログアウト</p>
              <% end %>
            </li>
            

            
          <% else %>
            <li class="icon-hover">
              <%= link_to new_user_path do %>
                <%= image_tag "icons/newacount.jpeg" %>
                <p class="explanation">新規作成</p>
              <% end %>
            </li>
            <li class="icon-hover">
              <%= link_to login_path do %>
                <%= image_tag "icons/login.jpeg" %>
                <p class="explanation">ログイン</p>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
    <%= yield %>
    
    <script>
  $(function(){
    $(".alert").fadeOut(5000);
  });

  $(".icon-hover").hover(
    function(){
      $(this).find(".explanation").addClass('icon-active');
    },
    function() {
      $(this).find(".explanation").removeClass('icon-active');
    }
  );

   </script>

  </body>
</html>
